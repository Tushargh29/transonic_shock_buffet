FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         none;

    limited         cellLimited Gauss linear 1;
    grad(U)         $limited;
    grad(p)         $limited;
    grad(e)         $limited;
    grad(nuTilda)   $limited;
    grad(k)         $limited;
    grad(omega)     $limited;
    grad(epsilon)   $limited;
    grad(K)         $limited;
}

divSchemes
{
    default         none;

    div(phi,U)      Gauss vanLeerV;

    turbulence      Gauss vanLeer;
    energy          Gauss vanLeer;

    div(phi,k)       $turbulence;
    div(phi,omega)   $turbulence;
    div(phi,nuTilda) bounded Gauss vanLeer;

    div(phi,e)      $energy;
    div(phi,K)      $energy;
    div(phi,Ekp)    $energy;

    div(phiv,p)     Gauss vanLeer;
    div(phid,p)     Gauss vanLeer;

    div(((rho*nuEff)*dev2(T(grad(U)))))    Gauss linear;
    div((nuEff*dev2(T(grad(U))))) Gauss linear;
    div(((rho*(thermo:mu|rho))*dev2(T(grad(U))))) Gauss linear;
}



laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method meshWave;
}

// ************************************************************************* //
